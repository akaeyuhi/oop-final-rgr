{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "declaration": true,
    "module": "es6",
    "target": "es5",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/typings.d.ts"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules"]
}
